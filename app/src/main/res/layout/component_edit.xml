<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_component"
    android:layout_width="match_parent"
    android:layout_height="668dp"
    android:background="?android:attr/colorBackground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/componentNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter room name" />

        <!-- Photo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo" />

        <Button
            android:id="@+id/selectcomponentPhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Photo" />

        <!-- Tasks -->
        <!-- You can add a list of tasks here if needed -->

        <!-- Components -->
        <!-- You can add a list of components here if needed -->

        <!-- Button to save -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/editcomponentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save" />

            <Button
                android:id="@+id/deletecomponentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Delete"
                app:backgroundTint="#AC1E1E" />

            <Button
                android:id="@+id/cancelcomponentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Cancel"
                app:backgroundTint="#8E7777" />


        </LinearLayout>
    </LinearLayout>
</FrameLayout>